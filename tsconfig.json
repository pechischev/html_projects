{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "ES5",
      "ES6",
      "DOM",
      "DOM.Iterable",
      "ScriptHost"
    ],
    "module": "es6",
    "jsx": "react",
    "outDir": "build/dist",
    "experimentalDecorators": true,
    "noStrictGenericChecks": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "allowJs": false,
    "sourceMap": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "*": ["./src/*"]
    }
  },
  "exclude": [
    "node_modules",
    "bin",
    "build"
  ]
}